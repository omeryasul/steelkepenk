<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    @* Admin CSS buraya eklenecek - önceki style kodları *@
    <style>
        <style >
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-color: #2563eb;
            --primary-dark: #1d4ed8;
            --secondary-color: #64748b;
            --success-color: #059669;
            --warning-color: #d97706;
            --danger-color: #dc2626;
            --dark-color: #1e293b;
            --light-color: #f8fafc;
            --white: #ffffff;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-400: #94a3b8;
            --gray-500: #64748b;
            --gray-600: #475569;
            --gray-700: #334155;
            --gray-800: #1e293b;
            --gray-900: #0f172a;
            --sidebar-width: 280px;
            --header-height: 70px;
            --border-radius: 12px;
            --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: var(--gray-800);
            overflow-x: hidden;
        }

        /* Admin Container */
        .admin-container {
            display: flex;
            min-height: 100vh;
            background: var(--light-color);
        }

        /* Sidebar */
        .admin-sidebar {
            width: var(--sidebar-width);
            background: linear-gradient(180deg, var(--dark-color) 0%, var(--gray-800) 100%);
            color: var(--white);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            z-index: 1000;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-xl);
            overflow-y: auto;
        }

            .admin-sidebar.collapsed {
                width: 80px;
            }

            .admin-sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .admin-sidebar::-webkit-scrollbar-track {
                background: rgba(255, 255, 255, 0.1);
            }

            .admin-sidebar::-webkit-scrollbar-thumb {
                background: rgba(255, 255, 255, 0.3);
                border-radius: 3px;
            }

        /* Table Styles */
        .table-container {
            overflow-x: auto;
            background: var(--white);
            border-radius: var(--border-radius);
            margin-top: 24px;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table th,
            .data-table td {
                padding: 16px;
                text-align: left;
                border-bottom: 1px solid var(--gray-200);
            }

            .data-table th {
                background: var(--gray-50);
                font-weight: 600;
                color: var(--gray-700);
                text-transform: uppercase;
                font-size: 12px;
                letter-spacing: 0.5px;
            }

            .data-table td {
                color: var(--gray-600);
            }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

            .status-badge.active {
                background: rgba(5, 150, 105, 0.1);
                color: var(--success-color);
            }

            .status-badge.inactive {
                background: rgba(220, 38, 38, 0.1);
                color: var(--danger-color);
            }

        .btn-edit,
        .btn-delete {
            padding: 8px 12px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin-right: 8px;
            transition: all 0.3s ease;
        }

        .btn-edit {
            background: var(--primary-color);
            color: var(--white);
        }

            .btn-edit:hover {
                background: var(--primary-dark);
                transform: translateY(-1px);
            }

        .btn-delete {
            background: var(--danger-color);
            color: var(--white);
        }

            .btn-delete:hover {
                background: #b91c1c;
                transform: translateY(-1px);
            }

        /* Product Grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 24px;
            margin-top: 24px;
        }

        .product-card {
            background: var(--white);
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow-sm);
            transition: all 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
            }

        .product-image {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

            .product-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.3s ease;
            }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: var(--warning-color);
            color: var(--white);
            padding: 4px 8px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 600;
        }

        .product-info {
            padding: 20px;
        }

            .product-info h3 {
                font-size: 18px;
                font-weight: 700;
                color: var(--dark-color);
                margin-bottom: 8px;
            }

            .product-info p {
                color: var(--gray-600);
                margin-bottom: 16px;
            }

        .product-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

            .product-meta .category {
                background: var(--gray-100);
                color: var(--gray-600);
                padding: 4px 8px;
                border-radius: 6px;
                font-size: 12px;
            }

            .product-meta .status {
                padding: 4px 8px;
                border-radius: 6px;
                font-size: 12px;
                font-weight: 600;
            }

                .product-meta .status.active {
                    background: rgba(5, 150, 105, 0.1);
                    color: var(--success-color);
                }

        .product-actions {
            display: flex;
            gap: 8px;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 24px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                font-weight: 600;
                color: var(--gray-700);
            }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 14px;
            transition: all 0.3s ease;
            background: var(--white);
        }

            .form-control:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .form-group small {
            display: block;
            margin-top: 4px;
            color: var(--gray-500);
            font-size: 12px;
        }

        /* Tabs */
        .settings-tabs {
            margin-top: 24px;
        }

        .tab-buttons {
            display: flex;
            border-bottom: 1px solid var(--gray-200);
            margin-bottom: 24px;
        }

        .tab-button {
            padding: 12px 24px;
            border: none;
            background: none;
            color: var(--gray-600);
            font-weight: 500;
            cursor: pointer;
            border-bottom: 2px solid transparent;
            transition: all 0.3s ease;
        }

            .tab-button.active {
                color: var(--primary-color);
                border-bottom-color: var(--primary-color);
            }

            .tab-button:hover {
                color: var(--primary-color);
            }

        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
            }

        /* SEO Styles */
        .seo-settings {
            margin-top: 24px;
        }

        .seo-section {
            background: var(--white);
            padding: 24px;
            border-radius: var(--border-radius);
            margin-bottom: 24px;
            box-shadow: var(--shadow-sm);
        }

            .seo-section h3 {
                margin-bottom: 20px;
                color: var(--dark-color);
                font-size: 18px;
            }

        .seo-preview {
            background: var(--white);
            padding: 24px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
        }

        .preview-box {
            background: var(--gray-50);
            padding: 16px;
            border-radius: 8px;
            border: 1px solid var(--gray-200);
        }

        .preview-url {
            color: var(--success-color);
            font-size: 14px;
            margin-bottom: 4px;
        }

        .preview-title {
            color: var(--primary-color);
            font-size: 18px;
            font-weight: 500;
            margin-bottom: 4px;
            text-decoration: underline;
        }

        .preview-description {
            color: var(--gray-600);
            font-size: 14px;
            line-height: 1.4;
        }

        /* Messages */
        .messages-list {
            margin-top: 24px;
        }

        .message-item {
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 20px;
            margin-bottom: 16px;
            box-shadow: var(--shadow-sm);
            border-left: 4px solid transparent;
            transition: all 0.3s ease;
        }

            .message-item.unread {
                border-left-color: var(--primary-color);
                background: rgba(37, 99, 235, 0.02);
            }

            .message-item:hover {
                transform: translateX(4px);
                box-shadow: var(--shadow-md);
            }

        .message-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }

        .sender-info strong {
            color: var(--dark-color);
            margin-right: 8px;
        }

        .sender-info .email {
            color: var(--gray-500);
            font-size: 14px;
        }

        .message-date {
            color: var(--gray-500);
            font-size: 12px;
        }

        .message-subject {
            font-weight: 600;
            color: var(--dark-color);
            margin-bottom: 8px;
        }

        .message-preview {
            color: var(--gray-600);
            line-height: 1.5;
            margin-bottom: 16px;
        }

        .message-actions {
            display: flex;
            gap: 8px;
        }

        .btn-reply {
            background: var(--primary-color);
            color: var(--white);
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .btn-reply:hover {
                background: var(--primary-dark);
                transform: translateY(-1px);
            }

        /* Notification */
        .notification {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 16px 20px;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            z-index: 10001;
            transform: translateX(400px);
            transition: all 0.3s ease;
        }

            .notification.show {
                transform: translateX(0);
            }

            .notification.success {
                background: var(--success-color);
                color: var(--white);
            }

            .notification.error {
                background: var(--danger-color);
                color: var(--white);
            }

            .notification.warning {
                background: var(--warning-color);
                color: var(--white);
            }
        /* Include all previous styles from the original code */
        .sidebar-header {
            padding: 24px 20px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
        }

        .sidebar-brand {
            display: flex;
            align-items: center;
            gap: 12px;
            color: var(--white);
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .sidebar-brand:hover {
                color: var(--primary-color);
            }

        .brand-icon {
            background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            box-shadow: var(--shadow-md);
        }

        .brand-text {
            font-size: 20px;
            font-weight: 700;
            background: linear-gradient(135deg, var(--white), #e2e8f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: var(--white);
            font-size: 18px;
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .sidebar-toggle:hover {
                background: rgba(255, 255, 255, 0.1);
                transform: scale(1.1);
            }

        /* Sidebar Menu */
        .sidebar-menu {
            padding: 20px 0;
        }

        .menu-section {
            margin-bottom: 32px;
        }

        .menu-title {
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: rgba(255, 255, 255, 0.5);
            padding: 0 20px 12px;
            margin-bottom: 8px;
        }

        .menu-item {
            margin-bottom: 4px;
        }

        .menu-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 20px;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border-left: 3px solid transparent;
            position: relative;
        }

            .menu-link:hover {
                background: rgba(255, 255, 255, 0.1);
                color: var(--white);
                border-left-color: var(--primary-color);
                transform: translateX(4px);
            }

            .menu-link.active {
                background: linear-gradient(90deg, var(--primary-color), rgba(37, 99, 235, 0.8));
                color: var(--white);
                border-left-color: var(--white);
                box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.2);
            }

        .menu-icon {
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 16px;
        }

        .menu-text {
            font-weight: 500;
            white-space: nowrap;
        }

        .menu-badge {
            background: var(--danger-color);
            color: var(--white);
            font-size: 10px;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 10px;
            margin-left: auto;
        }

        /* Main Content */
        .admin-main {
            flex: 1;
            margin-left: var(--sidebar-width);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: var(--light-color);
        }

            .admin-main.expanded {
                margin-left: 80px;
            }

        /* Header */
        .admin-header {
            background: var(--white);
            height: var(--header-height);
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 32px;
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .page-title {
            font-size: 24px;
            font-weight: 700;
            color: var(--dark-color);
            margin: 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .header-search {
            position: relative;
            width: 300px;
        }

        .search-input {
            width: 100%;
            padding: 12px 16px 12px 44px;
            border: 1px solid var(--gray-300);
            border-radius: var(--border-radius);
            font-size: 14px;
            transition: all 0.3s ease;
            background: var(--gray-50);
        }

            .search-input:focus {
                outline: none;
                border-color: var(--primary-color);
                background: var(--white);
                box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
            }

        .search-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray-400);
            font-size: 16px;
        }

        .header-notifications {
            position: relative;
            cursor: pointer;
        }

        .notification-icon {
            width: 44px;
            height: 44px;
            background: var(--gray-100);
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--gray-600);
            font-size: 18px;
            transition: all 0.3s ease;
        }

            .notification-icon:hover {
                background: var(--primary-color);
                color: var(--white);
                transform: scale(1.05);
            }

        .notification-badge {
            position: absolute;
            top: -2px;
            right: -2px;
            background: var(--danger-color);
            color: var(--white);
            font-size: 10px;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 10px;
            min-width: 18px;
            text-align: center;
        }

        .user-profile {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            padding: 8px 16px;
            border-radius: var(--border-radius);
            transition: all 0.3s ease;
        }

            .user-profile:hover {
                background: var(--gray-100);
            }

        .user-avatar {
            width: 36px;
            height: 36px;
            background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--white);
            font-weight: 600;
            font-size: 14px;
        }

        .user-info {
            display: flex;
            flex-direction: column;
        }

        .user-name {
            font-weight: 600;
            font-size: 14px;
            color: var(--dark-color);
        }

        .user-role {
            font-size: 12px;
            color: var(--gray-500);
        }

        /* Content Area */
        .admin-content {
            padding: 32px;
            min-height: calc(100vh - var(--header-height));
        }

        /* Dashboard Cards */
        .dashboard-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-bottom: 32px;
        }

        .dashboard-card {
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 24px;
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .dashboard-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, var(--primary-color), #3b82f6);
            }

            .dashboard-card:hover {
                transform: translateY(-4px);
                box-shadow: var(--shadow-lg);
            }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 16px;
        }

        .card-title {
            font-size: 14px;
            font-weight: 600;
            color: var(--gray-600);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .card-icon {
            width: 48px;
            height: 48px;
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            color: var(--white);
        }

            .card-icon.primary {
                background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            }

            .card-icon.success {
                background: linear-gradient(135deg, var(--success-color), #10b981);
            }

            .card-icon.warning {
                background: linear-gradient(135deg, var(--warning-color), #f59e0b);
            }

            .card-icon.danger {
                background: linear-gradient(135deg, var(--danger-color), #ef4444);
            }

        .card-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 8px;
        }

        .card-description {
            font-size: 14px;
            color: var(--gray-500);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .card-trend {
            font-weight: 600;
            padding: 2px 8px;
            border-radius: 20px;
            font-size: 12px;
        }

            .card-trend.up {
                background: rgba(5, 150, 105, 0.1);
                color: var(--success-color);
            }

            .card-trend.down {
                background: rgba(220, 38, 38, 0.1);
                color: var(--danger-color);
            }

        /* Management Section */
        .management-section {
            background: var(--white);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-sm);
            border: 1px solid var(--gray-200);
            overflow: hidden;
        }

        .section-header {
            background: linear-gradient(135deg, var(--gray-50), var(--white));
            padding: 24px 32px;
            border-bottom: 1px solid var(--gray-200);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .section-title {
            font-size: 20px;
            font-weight: 700;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .section-title i {
                color: var(--primary-color);
            }

        .section-actions {
            display: flex;
            gap: 12px;
        }

        .management-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 0;
        }

        .management-item {
            padding: 32px;
            border-right: 1px solid var(--gray-200);
            border-bottom: 1px solid var(--gray-200);
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
        }

            .management-item:hover {
                background: var(--gray-50);
                transform: scale(1.02);
            }

            .management-item:last-child {
                border-right: none;
            }

        .item-icon {
            width: 64px;
            height: 64px;
            border-radius: var(--border-radius);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: var(--white);
            margin-bottom: 16px;
            position: relative;
            overflow: hidden;
        }

            .item-icon::before {
                content: '';
                position: absolute;
                inset: 0;
                background: inherit;
                opacity: 0.8;
            }

        .item-title {
            font-size: 18px;
            font-weight: 700;
            color: var(--dark-color);
            margin-bottom: 8px;
        }

        .item-description {
            font-size: 14px;
            color: var(--gray-600);
            line-height: 1.5;
            margin-bottom: 16px;
        }

        .item-action {
            background: var(--primary-color);
            color: var(--white);
            border: none;
            padding: 10px 20px;
            border-radius: var(--border-radius);
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .item-action:hover {
                background: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: var(--shadow-md);
            }

        /* Quick Actions */
        .quick-actions {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 1000;
        }

        .fab-button {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary-color), #3b82f6);
            color: var(--white);
            border: none;
            border-radius: 50%;
            box-shadow: var(--shadow-xl);
            cursor: pointer;
            font-size: 24px;
            transition: all 0.3s ease;
        }

            .fab-button:hover {
                transform: scale(1.1) rotate(90deg);
                box-shadow: 0 25px 35px -5px rgba(37, 99, 235, 0.3);
            }

        {
            opacity: 0;
            transform: translateX(-30px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        .dashboard-card {
            animation: fadeInUp 0.6s ease-out;
        }

        .management-item {
            animation: slideIn 0.6s ease-out;
        }

        .dashboard-card:nth-child(1) {
            animation-delay: 0.1s;
        }

        .dashboard-card:nth-child(2) {
            animation-delay: 0.2s;
        }

        .dashboard-card:nth-child(3) {
            animation-delay: 0.3s;
        }

        .dashboard-card:nth-child(4) {
            animation-delay: 0.4s;
        }

        .management-item:nth-child(1) {
            animation-delay: 0.1s;
        }

        .management-item:nth-child(2) {
            animation-delay: 0.2s;
        }

        .management-item:nth-child(3) {
            animation-delay: 0.3s;
        }

        .management-item:nth-child(4) {
            animation-delay: 0.4s;
        }

        .management-item:nth-child(5) {
            animation-delay: 0.5s;
        }

        .management-item:nth-child(6) {
            animation-delay: 0.6s;
        }

        /* Modal Overlay */
        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 10000;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

            .modal-overlay.show {
                opacity: 1;
                visibility: visible;
            }

        .modal-content {
            background: var(--white);
            border-radius: var(--border-radius);
            max-width: 500px;
            width: 90%;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: var(--shadow-xl);
            transform: scale(0.9);
            transition: all 0.3s ease;
        }

        .modal-overlay.show .modal-content {
            transform: scale(1);
        }
    </style>

    </style>
</head>
<body>
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <div class="sidebar-header">
                <a asp-controller="Admin" asp-action="Index" class="sidebar-brand">
                    <div class="brand-icon">
                        <i class="fas fa-tools"></i>
                    </div>
                    <div class="brand-text">Furkan Kepenek</div>
                </a>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <nav class="sidebar-menu">
                <!-- Ana Menü -->
                <div class="menu-section">
                    <div class="menu-title">Ana Menü</div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="Index" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-tachometer-alt"></i></div>
                            <div class="menu-text">Dashboard</div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="Messages" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Messages" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-envelope"></i></div>
                            <div class="menu-text">Mesajlar</div>
                        </a>
                    </div>
                </div>

                <!-- İçerik Yönetimi -->
                <div class="menu-section">
                    <div class="menu-title">İçerik Yönetimi</div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="Categories" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Categories" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-folder"></i></div>
                            <div class="menu-text">Kategoriler</div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="Products" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Products" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-box"></i></div>
                            <div class="menu-text">Ürünler</div>
                        </a>
                    </div>
                </div>

                <!-- Site Yönetimi -->
                <div class="menu-section">
                    <div class="menu-title">Site Yönetimi</div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="Homepage" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Homepage" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-home"></i></div>
                            <div class="menu-text">Ana Sayfa</div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a asp-controller="Admin" asp-action="ContactPage" class="menu-link @(ViewContext.RouteData.Values["action"]?.ToString() == "ContactPage" ? "active" : "")">
                            <div class="menu-icon"><i class="fas fa-phone"></i></div>
                            <div class="menu-text">İletişim Ayarları</div>
                        </a>
                    </div>
                </div>

                <!-- Sistem -->
                <div class="menu-section">
                    <div class="menu-title">Sistem</div>
                    <div class="menu-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="menu-link" target="_blank">
                            <div class="menu-icon"><i class="fas fa-external-link-alt"></i></div>
                            <div class="menu-text">Siteyi Görüntüle</div>
                        </a>
                    </div>
                    <div class="menu-item">
                        <a asp-controller="Account" asp-action="Logout" class="menu-link">
                            <div class="menu-icon"><i class="fas fa-sign-out-alt"></i></div>
                            <div class="menu-text">Çıkış Yap</div>
                        </a>
                    </div>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="admin-main" id="adminMain">
            <!-- Header -->
            <header class="admin-header">
                <div class="header-left">
                    <h1 class="page-title">@ViewData["Title"]</h1>
                </div>

                <div class="header-right">
                    <!-- Search -->
                    <div class="header-search">
                        <div class="search-icon">
                            <i class="fas fa-search"></i>
                        </div>
                        <input type="text" class="search-input" placeholder="Ara...">
                    </div>

                    <!-- User Profile -->
                    <div class="user-profile">
                        <div class="user-avatar">FK</div>
                        <div class="user-info">
                            <div class="user-name">Furkan Kepenek</div>
                            <div class="user-role">Admin</div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Content Area -->
            <div class="admin-content">
                @* Success/Error Messages *@
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        <i class="fas fa-check-circle"></i>
                        @TempData["SuccessMessage"]
                    </div>
                }

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-error">
                        <i class="fas fa-exclamation-circle"></i>
                        @TempData["ErrorMessage"]
                    </div>
                }

                @RenderBody()
            </div>
        </main>
    </div>

    <script>
        // Admin panel JavaScript kodları buraya
        function toggleSidebar() {
            const sidebar = document.getElementById('adminSidebar');
            const main = document.getElementById('adminMain');

            sidebar.classList.toggle('collapsed');
            main.classList.toggle('expanded');
        }
    </script>
    @RenderSection("Scripts", required: false)

</body>
</html>
</html>



